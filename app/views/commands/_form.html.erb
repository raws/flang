<% if @command.errors.present? %>
	<ul id="errors">
		<% @command.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @command do |f| %>
	<div><%= f.label :name %> <%= f.text_field :name %></div>
	<div id="command_editor"><%= @command.body %></div>
	<%= f.text_area :body %>
	<div><%= f.submit %></div>
<% end %>
